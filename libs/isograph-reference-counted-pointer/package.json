  "homepage": "https://isograph.dev",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Isograph Labs",
  "license": "MIT",
  "scripts": {
    "compile-libs": "tsdown",
    "watch-libs": "tsdown --watch",
