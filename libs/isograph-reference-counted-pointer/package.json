    "test-watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "tsc": "tsc",
    "tsc-force": "tsc --build --clean && tsc --build --force"
  },
  "dependencies": {
    "@isograph/disposable-types": "*"
  },
  "devDependencies": {
    "typescript": "5.6.3"
