{
  "name": "isograph",
  "private": true,
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@prettier/plugin-oxc": "0.0.4",
    "@swc/core": "1.7.42",
    "gulp": "4.0.2",
    "oxlint": "1.32.0",
    "oxlint-tsgolint": "0.9.0",
    "prettier": "^3.6.2",
    "rimraf": "6.0.1",
    "tsdown": "0.15.10",
    "turbo": "^2.5.6",
    "typescript": "5.6.3",
    "vitest": "^2.1.2"
  },
  "scripts": {
    "watch-rs": "bacon -j build",
    "watch-swc": "bacon -j build-swc",
    "check-rs": "bacon -j check",
    "build-compiler": "cargo build --color=always",
    "build-swc": "cargo build -p swc_isograph_plugin --release --target wasm32-wasip1 && cd ./libs/isograph-swc-plugin && pnpm prepack",
    "compile-libs": "turbo compile-libs --log-order=grouped",
    "watch-libs": "turbo watch compile-libs",
    "cross": "cross build",
    "lint": "oxlint --type-aware",
    "build-json-schema": "./target/debug/build_json_schema",
    "watch-pet-demo": "turbo watch iso --filter=// --filter=pet-demo --ui=tui",
    "watch-github-demo": "turbo watch iso --filter=// --filter=github-demo --ui=tui",
    "watch-isograph-react-demo": "turbo watch iso --filter=// --filter=@isograph/react --ui=tui",
    "watch-vite-demo": "turbo watch iso --filter=// --filter=vite-demo --ui=tui",
    "dev-pet-demo": "turbo watch dev iso --filter=// --filter=pet-demo --ui=tui",
    "dev-github-demo": "turbo watch dev iso --filter=// --filter=github-demo --ui=tui",
    "dev-isograph-react-demo": "turbo watch dev iso --filter=// --filter=@isograph/react --ui=tui",
    "dev-vite-demo": "turbo watch dev iso --filter=// --filter=vite-demo --ui=tui",
    "build-demos": "turbo iso --log-order=grouped",
    "build-pet-demo": "turbo iso --filter=pet-demo",
    "build-github-demo": "turbo iso --filter=github-demo",
    "build-isograph-react-demo": "turbo iso --filter=@isograph/react",
    "build-vite-demo": "turbo iso --filter=vite-demo",
    "format": "pnpm run format-prettier && pnpm run format-rust",
    "format-prettier": "prettier --experimental-cli --cache --config-path ./.prettierrc.json --write .",
    "format-rust": "cargo fmt",
    "test": "vitest --run",
    "tsc": "pnpm -r --parallel --aggregate-output tsc",
    "test-watch": "vitest",
    "coverage": "vitest run --coverage",
    "sanity-check": "./scripts/sanity-check.sh",
    "generate-fixture-tests": "cargo run --bin generate_isograph_fixtures -- --dir ./crates/isograph_lang_parser/fixtures/",
    "fix-line-endings": "git diff $(git merge-base main HEAD) --name-only | xargs -I {} dos2unix {}",
    "latest-published-version": "pnpm view @isograph/react dist-tags.main"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isographlabs/isograph.git"
  },
  "engines": {
    "node": "24.12.0"
  },
  "packageManager": "pnpm@10.15.0"
}
