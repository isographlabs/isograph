{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["RUSTUP_HOME", "CARGO_HOME"],
  "tasks": {
    "iso": {
      "cache": false,
      "dependsOn": ["//#build-compiler"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "tsc": {
      "dependsOn": ["^compile-libs"]
    },
    "compile-libs": {
      "dependsOn": ["tsc"],
      "outputs": ["dist/**", "package.json"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "$TURBO_ROOT$/tsdown.config.ts",
        "$TURBO_ROOT$/tsconfig.json",
        "$TURBO_ROOT$/tsconfig.build.json"
      ]
    },
    "//#build-compiler": {
      "inputs": ["crates/**", "relay-crates/**", "Cargo.*"],
      "outputs": ["**/release/isograph_cli*", "**/debug/isograph_cli*"]
    },
    "//#cross": {
      "inputs": ["crates/**", "relay-crates/**", "Cargo.*"],
      "outputs": ["**/release/isograph_cli*", "**/debug/isograph_cli*"]
    }
  }
}
