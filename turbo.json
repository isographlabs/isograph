{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "iso": {
      "cache": false,
      "dependsOn": ["//#build-compiler"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "compile-libs": {
      "dependsOn": ["^compile-libs"],
      "outputs": ["dist/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "$TURBO_ROOT$/tsdown.config.ts",
        "$TURBO_ROOT$/tsconfig.json",
        "$TURBO_ROOT$/tsconfig.build.json"
      ]
    },
    "//#build-compiler": {
      "inputs": ["crates/**", "relay-crates/**", "Cargo.*"],
      "outputs": ["**/release/isograph_cli*", "**/debug/isograph_cli*"]
    },
    "//#cross": {
      "inputs": ["crates/**", "relay-crates/**", "Cargo.*"],
      "outputs": ["**/release/isograph_cli*", "**/debug/isograph_cli*"]
    }
  }
}
